<md-dialog aria-label="add Marker" class="md-dialog-comment">
  <h3>Comments</h3>
  <md-divider></md-divider>

  <md-content layout-padding class="sticky-container">
    <div class="dialog-content">

      <md-list class="md-comments">
        <md-list-item class="md-3-line md-comment-item"
                      ng-class="{last: $last}"
                      ng-repeat="comment in comments | filter: {marker_id: currentMarker.id} | orderBy:created_at:reverse">
          <img ng-src="assets/avatar/{{comment.poster}}.png" class="md-avatar md-comments-avatar"/>
          <div class="md-list-item-text md-comment-item-text" layout="column">
            <h3>{{comment.text}}</h3>
            <p>
              <small>
                <em am-time-ago="comment.created_at" class="time-ago"></em>
              </small>
            </p>
          </div>
          <md-divider></md-divider>
        </md-list-item>
      </md-list>

    </div>
  </md-content>

  <div layout-padding>
    <div class="md-searchbox">
      <div layout="row" role="listbox" class="md-whiteframe-z1 md-searchbox-wrap ">
        <input flex="90" type="text" placeholder="Write a comment..." ng-model="comment.text"
               ng-keypress="($event.charCode==13)?addComment(comment):return">
        <md-icon flex="10"  class="md-send-comment"
                            ng-class='{"md-comment-pass":comment.text}'
                            md-svg-icon="assets/svg/md-send.svg"
                            ng-click="addComment(comment)">
        </md-icon>
      </div>
    </div>
  </div>

  <div class="md-actions" layout="row">
    <md-button class="md-primary md-dialog-action-buttons" ng-click="closeDialog()">
      Cancel
    </md-button>
    <md-button class="md-primary md-dialog-action-buttons" ng-click="addComment(comment)">
      Add
    </md-button>
  </div>

</md-dialog>